{
  "name": "dsp-vsc-pss",
  "displayName": "PSS Language Support",
  "description": "This extension provides Language Support for Portable Stimulus Standard's Domain Specific Language..",
  "version": "0.2.1",
  "publisher": "Darshan",
  "author": "Darshan",
  "icon": "media/icon.jpeg",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:pss"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisisthedarshan/vscode-pss"
  },
  "bugs": {
    "url": "https://github.com/thisisthedarshan/vscode-pss/issues"
  },
  "keywords": [
    "portable stimulus",
    "pss",
    "accellera pss",
    "pss 3.0"
  ],
  "galleryBanner": {
    "color": "#E3741D",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "pss",
        "aliases": [
          "Portable Stimulus",
          "pss"
        ],
        "extensions": [
          ".pss"
        ],
        "configuration": "configs/language-configuration.json",
        "icon": {
          "light": "media/PSS-Icon-Light.png",
          "dark": "media/PSS-Icon-Dark.png"
        }
      }
    ],
    "snippets": [
      {
        "language": "pss",
        "path": "snippets/pss-snippets.json"
      }
    ],
    "grammars": [
      {
        "language": "pss",
        "scopeName": "source.pss",
        "path": "syntaxes/pss.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.c": "c",
          "meta.embedded.block.sv": "systemverilog"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "lspPSS.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 420,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "lspPSS.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd server&&npm run antlr4ts&&cd ..&&tsc -b",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client&&npm install&&cd ../server&&npm install&&npm run antlr4ts&&cd .."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vscode": "^1.1.34",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "antlr4": "^4.13.2",
    "path": "^0.12.7",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
